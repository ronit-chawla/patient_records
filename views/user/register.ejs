<%- include("../partials/header") %>
<nav class="ui pointing menu">
  <a href="/" class="item">
    Home
  </a>
  <a href="/patients" class="item">
    Patients
  </a>
  <a href="/patients/new" class="item">
    New
  </a>
  <div class="right menu">
    <% if(currentUser){ %>
      <a href="/logout" class="item">
        Logout
      </a>
      <a href="/patients" class="item"><%=currentUser.username%> </a>
      <% } else{%>
      <a href="/login" class="item">
        Login
      </a>
      <a href="/register" class="active item">
        Sign Up
      </a>
      <% } %>
    </div>
</nav>
<%- include("../partials/mid") %>
<div class="ui center aligned basic segment middle">
  <h1>Create A Account</h1>
  <div class="ui form">
    <form action="/register" method="post">
      <div class="field">
        <label>Username</label>
        <div class="ui left icon input">
          <input type="text" required placeholder="Username" name="username">
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Password</label>
        <div class="ui left icon input">
          <input type="password" required name="password">
          <i class="lock icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <div class="ui left icon input">
          <input type="password" required name="confirmPassword">
          <i class="lock icon"></i>
        </div>
      </div>
      <div class="field">
        <label>email</label>
        <div class="ui left icon input">
          <input type="email" required name="email">
          <i class="envelope open outline icon"></i>
        </div>
      </div>
      <button class="ui blue submit button">Sign Up</button>
    </form>
  </div>
</div>
<div class="ui horizontal divider">
  Or
</div>
<div class="middle aligned column pt-3">
  <a class="ui big button" href="/login">
    <i class="user outline icon"></i>
    Login
  </a>
</div>

<%-include("../partials/footer") %>